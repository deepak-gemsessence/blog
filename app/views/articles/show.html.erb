
<%= javascript_include_tag :defaults, "nested_form" %>

<h1>show article page</h1>

<%= render 'users/welcome' %>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @article.user.username %></td>
    <td><%= @article.title %></td>
    <td><%= @article.description %></td>
  </tr>
</table>

<% if logged_in? %>
<h3>Make Comment</h3>
  <%= nested_form_for(@article, url: article_comments_path(@article), method: :post, remote: true) do |f| %>
    <%= f.fields_for :comments do |comment_form| %>
      <% unless comment_form.object.persisted? %>
        <p>
          <%= comment_form.label :commenter%><br>
          <%= comment_form.text_field :commenter, value: current_user.first_name, readonly: true %>
        </p>
        <p>
          <%= comment_form.label :body %><br>
          <%= comment_form.text_area :body, id: "body_input" %>
        </p>
      <% end %>
    <% end %>
    <p>
      <%= f.link_to_add "add a comment", :comments %>
    </p>
    <p>
      <%= f.submit class: "btn btn-success" %><br>
    </p>
  <% end %>
<% end %>

<h4> No. of Comments :- <%= @article.comments.count %> </h4>
<h3> Older Comments :- </h3>
<div class="comments" id="comment">
  <% if @article.is_approved_comment? %>
    <% @comments.each do |comment| %>
      <%= render comment, article: @article %>
    <% end %>
  <% end %>
</div>