<%= javascript_include_tag :defaults, "nested_form" %>

<h1>new title</h1>

<% if logged_in? %>
  Welcome <%= current_user.first_name %>
<% end %> <br>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %><br>
  </p>
<% end %>

<%= render 'users/footer' %>