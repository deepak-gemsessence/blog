<h1>new title</h1>

  <%= form_for @article do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :user_name %><br>
      <%= f.text_field :user %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %><br>
    </p>

  <% end %>

