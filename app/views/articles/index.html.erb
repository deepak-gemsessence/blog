<h2>all titles</h2>

<%= render 'users/welcome' %>
<h3> No of articles are : <%= @articles.count if logged_in? %></h3>
<br>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% if logged_in? %>
    <% @articles.each do |article| %>
      <tr>
        <%= render 'view_article', art: article %>
        <td> <%= link_to "edit", edit_article_path(article) %> </td>
        <td> <%= link_to "delete", article, method: :delete, data: { confirm: "You sure?" } %> </td>
      </tr>
    <% end %>
    <td><b>Other Authers Articles<b></td>
    <% @other_authors_articles.each do |article| %>
      <tr>
      <%= render 'view_article', art: article %>
      </tr>
    <% end -%>
  <% else %>
    <td><b>All Articles<b></td>
    <% @all_articles.each do |article| %>
      <tr>
        <%= render 'view_article', art: article %>
      </tr>
    <% end -%>
  <% end %>


</table>

<%if !logged_in? %>
  <%= render 'users/not_logged_in' %>
<%else%>
  <%= render 'users/footer' %>
<% end %>
