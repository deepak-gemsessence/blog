<h1>all titles</h1>
<h2> No of articles are : <%= @articles.count %></h4>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @current_user.articles.each do |article| %>
    <tr>
      <td><%= article.title.capitalize %></td>
      <td><%= article.description.first(20) %></td>
      <td> <%= link_to "view", article %> </td>
      <td> <%= link_to "edit", edit_article_path(article) %> </td>
      <td> <%= link_to "delete", article, method: :delete, data: { confirm: "You sure?" } %> </td>
    </tr>
  <% end %>
</table>

