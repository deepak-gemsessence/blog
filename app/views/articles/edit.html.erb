<h1>Edit Article</h1>

<% if logged_in? %>
  Welcome <%= current_user.first_name %>
<% end %> <br>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <tr>
    <%= form_for @article do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </p>
      <p>
        <%= f.submit %><br>
      </p>
    <% end %>
  </tr>
</table>

<br><br>
<%= link_to "view all aritcles", articles_path %>
<%= render 'users/footer' %>
