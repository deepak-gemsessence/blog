<h1>User Index</h1>


<% if logged_in? %>
  Welcome <%= current_user.first_name %>
  No of users are : <%= @users.count %><br>
<% end %> <br>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Contact No</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>

  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.contact %></td>
    <td><%= link_to "view", user %></td>
    <% if user.match_current_user(current_user) %>
      <td><%= link_to "edit", edit_user_path(user) %></td>
      <td><%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %></td>
    <% end %>
  </tr>

  <% end %>

</table>
<%= render 'footer' %>


