<h3>New Comments</h3>

<% if logged_in? %>
  Welcome <%= current_user.first_name %>
<% end %> <br>

<%= form_for @comment , url: article_comments_path(@current_article), method: :post do |f| %>
  <p>
    <%= f.label :commenter%><br>
    <%= f.text_field :commenter, value: current_user.first_name, readonly: true %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %><br>
  </p>
<% end %>

